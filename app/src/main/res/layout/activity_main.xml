<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/singerNameTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şarkıcı Adı"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/getAllCategoriesBTN"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:onClick="GetAllCategories"
            android:text="GET CATEGORIES" />

        <Button
            android:id="@+id/addMusicianBTN"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:onClick="AddMusicianToFirebase"
            android:text="ADD A MUSICIAN" />

        <Button
            android:id="@+id/openAudioFileBTN"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:onClick="OpenAudioFile"
            android:text="LOAD MUSIC" />

        <Button
            android:id="@+id/loadMusicBTN"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:onClick="AddAudioToFirebase"
            android:text="UPLOAD TO FIREBASE" />

        <Button
            android:id="@+id/addUserBTN"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:onClick="AddUserToFirebase"
            android:text="ADD A USER" />

        <Button
            android:id="@+id/showMusicsBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:onClick="GoToShowMusics"
            android:text="SHOW MUSICS" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>